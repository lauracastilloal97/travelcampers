{% block head %}
{% block stylesheets %}
<link href="../css/nuevaCampers.css" rel="stylesheet" />
{% endblock %}

{% endblock %}
{% block body %}
<div class="container">
    <div class="formulario col-md-12">



        {{ form_start(form) }}
        <br>
        <div>
            <label><b>{{ form_row(form.title, {"label": "Nombre"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.descripcion, {"label": "Descripcion"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.matricula, {"label": "Matricula"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.marca, {"label": "Marca"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.modelo, {"label": "Modelo"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.precio, {"label": "Precio por día"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.capacidad, {"label": "Capacidad personas"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.dimensiones, {"label": "Dimensiones campers"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.wc, {"label": "Baño"})}}</b></label>
        </div><br>
        <div>
            <label><b>{{ form_row(form.image, {"label": "Imagen"})}}</b></label>
        </div><br>
    </div>
</div>
<div class="botones">
    <button class="btn">{{ button_label|default('Guardar') }}</button>
</div>
{{ form_end(form) }}
{% endblock %}
