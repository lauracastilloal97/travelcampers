{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link href="/css/estiloPerfil.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
{% endblock %}
{% block body %}


<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    {% if app.user.avatar %}
                    <img src="/img/{{app.user.avatar}}" alt="" class="avatar">
                    {% else %}
                    <img src="/img/user.png" alt="Avatar" />
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        Usuario
                    </h5><br>
                    <h6>
                        {{ app.user.email }}
                    </h6>
                    <p class="proile-rating"></p><br>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Mis reservas</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <a href="../../user/{{app.user.id}}/edit" class="profile-edit-a" name="btnAddMore">Editar</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Id Usuario</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.id }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nombre</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.name }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Apellidos</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.fistname }} {{ app.user.lastname }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Dni</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.dni }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ciudad</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{ app.user.city }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        {% for reserva in user.reservas %}
                        <div class="caja">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Fecha</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{reserva.fecha |date("d/m/y")}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Campers</label>
                            </div>
                            <div class="col-md-6">
                                <p>{{reserva.campers}} </p>
                            </div>
                        </div>
                            </div><br>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
